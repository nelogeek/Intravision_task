@model IEnumerable<Intravision_task.DTO.CoinDTO>

@{
    ViewData["Title"] = "Coins";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Value</th>
            <th>Quantity</th>
            <th>Blocked</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var coin in Model)
        {
            <tr>
                <td>@coin.Id</td>
                <td>@coin.Value</td>
                <td>@coin.Quantity</td>
                <td>@coin.IsBlocked</td>
                <td>
                    
                    <form id="deleteForm-@coin.Id" action="@Url.Action("Delete", "Coins", new { id = coin.Id })" method="post" class="d-flex align-items-center gap-1">
                        <a asp-action="Edit" asp-route-id="@coin.Id">Edit</a>  |
                        <button type="submit" class="btn btn-link link-danger p-0" onclick="return confirm('Are you sure you want to remove?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Admin">Back to admin panel</a>
<a class="btn btn-outline-secondary" asp-action="Add">Add new coin</a>

