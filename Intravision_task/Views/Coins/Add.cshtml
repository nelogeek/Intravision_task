@model Intravision_task.DTO.CoinDTO

@{
    ViewData["Title"] = "Add coin";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Add" method="post">
    <div class="mb-2">
        <div class="form-group">
            <label asp-for="Value" class="control-label"></label>
            <input asp-for="Value" class="form-control" id="Value" oninput="validateCoinValue()" />
            <span asp-validation-for="Value" class="text-danger" id="coinValueValidationMessage"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="IsBlocked" class="form-check-input" type="checkbox" id="IsBlocked" />
                <label class="form-check-label" for="IsBlocked">Blocked</label>
            </div>
        </div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index" asp-controller="Coins">Back to list</a>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
